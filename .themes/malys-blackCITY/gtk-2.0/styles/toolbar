style "toolbar"
{
xthickness=7
ythickness=7
engine "pixmap"
{
image
{
	function=BOX
	file="/Toolbar/toolbar.png"
	border={ 10, 10, 10, 10 }
	stretch=TRUE
}}}
widget_class "*HandleBox"		style "toolbar"
class "*HandleBox"			style "toolbar"
widget_class "*Toolbar"			style "toolbar"
class "*Toolbar"			style "toolbar"
style "toolbuttons"="default"
{
xthickness=6
ythickness=6

GtkWidget::focus_padding=2
engine "pixmap" {
      
image
		{
			function        		= BOX
			recolorable     		= TRUE
			state					= NORMAL
			file            			= "Toolbar/toolbutton-normal.png"
			border          		= { 10, 10, 10, 10 }
			stretch         		= TRUE
		}
image
		{
			function        		= BOX
			recolorable     		= TRUE
			state					= PRELIGHT
			file            			= "Toolbar/toolbutton-prelight.png"
			border          		= { 10, 10, 10, 10 }
			stretch         		= TRUE
		}
image
		{
			function        		= BOX
			recolorable     		= TRUE
			state					= ACTIVE
			file            			= "Toolbar/toolbutton-pressed.png"
			border          		= { 10, 10, 10, 10 }
			stretch         		= TRUE
		}  
image
		{
			function        		= BOX
			recolorable     		= TRUE
			state					= INSENSITIVE
			file            			= "Toolbar/toolbutton-insensitive.png"
			border          		= { 10, 10, 10, 10 }
			stretch         		= TRUE
		}  
	}
}
widget_class "*Tool*GtkToggleButton" style "toolbuttons"
widget_class "*Tool*GtkButton" style "toolbuttons"

